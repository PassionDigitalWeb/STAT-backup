{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@root/*": ["./*"],
      "@lib/*": ["lib/*"],
      "@app-types/*": ["types/*"]
    }
  }
}